{
  "compilerOptions": {
    "target": "ES5",
    "module": "system",
    "sourceMap": false,
    "outFile": "app-bundle.js",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "removeComments": true,
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true
  },
  "exclude": [
    "node_packages"
  ]
}
